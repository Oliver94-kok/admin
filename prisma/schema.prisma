generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id           String         @id @default(cuid())
  name         String
  username     String
  password     String
  token        String?
  userImg      String?
  role         UserRole       @default(USER)
  Attends      Attends[]
  Salary       Salary[]
  AttendBranch AttendBranch[]
}

model Attends {
  id          String    @id @default(cuid())
  clockIn     DateTime?
  clockOut    DateTime?
  workingHour Float?
  img         String?
  locationIn  String?
  locationOut String?
  userId      String
  users       User?     @relation(fields: [userId], references: [id])
}

model Salary {
  id           String @id @default(cuid())
  month        Int
  year         Int
  workingDay   Int
  late         Float?
  overTimeHour Float?
  overTime     Float?
  userId       String
  users        User?  @relation(references: [id], fields: [userId])
}

model Branch {
  id           String         @id @default(cuid())
  code         String
  address      String
  team         String
  AttendBranch AttendBranch[]
}

model AttendBranch {
  id       String    @id @default(cuid())
  clockIn  DateTime
  clockOut DateTime
  userId   String
  branchid String
  location String
  startOn  DateTime?
  offDay   DateTime?
  users    User?     @relation(references: [id], fields: [userId])
  branchs  Branch?   @relation(references: [id], fields: [branchid])
}
