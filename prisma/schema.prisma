generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id       String    @id @default(cuid())
  name     String
  username String
  password String
  token    String?
  role     UserRole  @default(USER)
  Attends  Attends[]
}

model Attends {
  id       String    @id @default(cuid())
  clockIn  DateTime?
  clockOut DateTime?
  img      String?
  userId   String
  users    User?     @relation(fields: [userId], references: [id])
}
